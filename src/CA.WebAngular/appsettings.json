{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "apiroute": {
        "ClusterId": "apicluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/{**reminder}",
          "Methods": [ "GET", "POST", "PUT", "PATCH", "DELETE" ]
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "apicluster": {
        "Destinations": {
          "api1": {
            "Address": "https://localhost:7164"
          }
        }
      }
    }
  }
}
